<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/cc23afd981.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column vh-100">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div class="collapse navbar-collapse" id="navberNavDropdown">
            <%= link_to "Bookers", root_path, class: 'text-light' %>
            <ul class="navber-nav ml-auto">
            <span class="navber-toggler-icon">
　　　　　　　<li>
                <i class="fas fa-home" style="color:white"></i>
                <%= link_to "Home", root_path, class: 'text-light' %>
                <i class="fas fa-users" style="color:white"></i>
                <%= link_to "Users", users_path, class: 'text-light' %>
                <i class="fas fa-book-open" style="color:white"></i>
                <%= link_to "books", new_book_path, class: 'text-light' %>
    <% if user_signed_in? %>
    　          <i class="fas fa-sign-out-alt" style="color:white"></i>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'text-light' %>
              </li>
    <% else %>
                <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-light' %>
                <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
    <% end %>
            </ul>
           </span>
          </div>
          </div>
        </div>
    </header>
    <%= yield %>
    <footer>
          <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
