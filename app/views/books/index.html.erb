<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/userinfo',user: @user %>
      <%= render 'new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% @books.each do |book| %>
        <p>タイトル</p>
        <span>
          <%=link_to book.title, book_path(book.id) %>
        </span>
      
        <p>画像</p>
        <%= image_tag book.image, size: "200x200" %>
      <% end %>
   </div>
 </div>
</div>